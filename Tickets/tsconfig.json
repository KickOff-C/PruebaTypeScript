{
  "compilerOptions": {
    /* === Estructura del proyecto === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Entorno de ejecución === */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],

    /* === Interoperabilidad y soporte === */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* === Comportamiento de compilación === */
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Tipos opcionales relajados === */
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"]
}
